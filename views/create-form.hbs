<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-8">

            <h1>Nuevo Dron</h1>
            <hr>

            <form action="/drones/create" method="POST">
                <div class="mb-3 mt-5">
                    <label for="dronName" class="form-label">Name</label>
                    <input type="text" class="form-control" id="dronName" name="name">
                </div>

                <div class="mb-3">
                    <label for="propellers" class="form-label">Propellers</label>
                    <input type="text" class="form-control" id="propellers" name="propellers">
                </div>

                <div class="mb-3 ">
                    <label for="Max Speed" class="form-label">Max Speed</label>
                    <input type="number" class="form-control" id="Max Speed" name="maxSpeed">
                </div>
                <button type="submit" class="btn btn-dark">Crear Dron</button>
            </form>
        </div>
    </div>
</div>
